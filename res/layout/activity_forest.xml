<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForestActivity" 
    android:background="@color/light_green">

<Button
        android:id="@+id/forestBack"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/back" />

   

    <TextView
        android:id="@+id/forestTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/forestBack"
        android:layout_alignBottom="@+id/forestBack"
        android:layout_centerHorizontal="true"
        android:text="@string/forest_sound"  
        android:textAppearance="?android:attr/textAppearanceLarge" />

    
  <ImageSwitcher android:id="@+id/forestImageSwitcher"  
     android:layout_height="fill_parent"  
    android:layout_width="fill_parent"  
    android:layout_alignParentTop="true"  
    android:layout_alignParentLeft="true">  
    </ImageSwitcher>  
      
      
   <Gallery   
     android:id="@+id/forestGallery"  
     android:background="#15000000"  
     android:layout_width="fill_parent"  
     android:layout_height="70dp"  
     android:layout_alignParentBottom="true"  
     android:layout_alignParentLeft="true"    
     android:gravity="center_vertical"  
     android:spacing="22dp" />

   <Button
       android:id="@+id/forestStartButton"
       style="?android:attr/buttonStyleSmall"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentLeft="true"
       android:layout_below="@+id/forestBack"
       android:text="@string/play" />

   <Button
       android:id="@+id/forestPauseButton"
       style="?android:attr/buttonStyleSmall"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignBaseline="@+id/forestStartButton"
       android:layout_alignBottom="@+id/forestStartButton"
       android:layout_centerHorizontal="true"
       android:text="@string/pause" />
   
     <Button
       android:id="@+id/forestRestartButton"
       style="?android:attr/buttonStyleSmall"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignBaseline="@+id/forestStartButton"
       android:layout_alignBottom="@+id/forestStartButton"
       android:layout_alignParentRight="true"
       android:text="@string/restart" />

</RelativeLayout>
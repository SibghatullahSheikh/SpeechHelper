<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.speechhelper"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" 
        android:name="com.example.speechhelper.facebook.ScrumptiousApplication">
        <activity
            android:name="com.example.speechhelper.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.speechhelper.MyProject"
            android:label="@string/title_activity_my_project" >
        </activity>
        <activity
            android:name="com.example.speechhelper.MyProjects"
            android:label="@string/title_activity_my_projects" >
        </activity>
        <activity
            android:name="com.example.speechhelper.NewProject"
            android:label="@string/title_activity_new_project" >
        </activity>
        <activity
            android:name="com.example.speechhelper.Presentation"
            android:label="@string/title_activity_presentation" >
        </activity>
        <activity
            android:name="com.example.speechhelper.Notes"
            android:label="@string/title_activity_notes" >
        </activity>
        <activity
            android:name="com.example.speechhelper.NewNote"
            android:label="@string/title_activity_new_note" >
        </activity>
        <activity
            android:name="com.example.speechhelper.ExistingProject"
            android:label="@string/title_activity_existing_project" >
        </activity>
        <activity
            android:name="com.example.speechhelper.ProjectNoteList"
            android:label="@string/title_activity_project_note_list" >
        </activity>
        <activity
            android:name="com.example.speechhelper.ProjectVideoList"
            android:label="@string/title_activity_project_video_list" >
        </activity>
        <activity
            android:name="com.example.speechhelper.ProjectTabHost"
            android:label="@string/title_activity_project_tab_host" >
        </activity>

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/app_id" />

        <activity
            android:name="com.facebook.LoginActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.example.speechhelper.facebook.FacebookActivity"
            android:label="@string/title_activity_facebook" >
        </activity>
        <activity android:name="com.example.speechhelper.facebook.PickerActivity"
          android:label="@string/app_name" />
    </application>

</manifest>
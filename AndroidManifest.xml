<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.speechhelper"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <application
        android:name="com.example.speechhelper.facebook.SpeechHelperApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.speechhelper.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.speechhelper.speech.MyProject"
            android:label="@string/title_activity_my_project" >
        </activity>
        <activity
            android:name="com.example.speechhelper.speech.MyProjects"
            android:label="@string/title_activity_my_projects" >
        </activity>
        <activity
            android:name="com.example.speechhelper.speech.NewProject"
            android:label="@string/title_activity_new_project" >
        </activity>
        <activity
            android:name="com.example.speechhelper.speech.Presentation"
            android:label="@string/title_activity_presentation" >
        </activity>
        <activity
            android:name="com.example.speechhelper.speech.Notes"
            android:label="@string/title_activity_notes" >
        </activity>
        <activity
            android:name="com.example.speechhelper.speech.NewNote"
            android:label="@string/title_activity_new_note" >
        </activity>
        <activity
            android:name="com.example.speechhelper.speech.ExistingProject"
            android:label="@string/title_activity_existing_project" >
        </activity>
        <activity
            android:name="com.example.speechhelper.speech.ProjectNoteList"
            android:label="@string/title_activity_project_note_list" >
        </activity>
        <activity
            android:name="com.example.speechhelper.speech.ProjectVideoList"
            android:label="@string/title_activity_project_video_list" >
        </activity>
        <activity
            android:name="com.example.speechhelper.speech.ProjectTabHost"
            android:label="@string/title_activity_project_tab_host" >
        </activity>
        <activity
            android:name="com.example.speechhelper.speech.EditNote"
            android:label="@string/title_activity_edit_note" >
        </activity>

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/app_id" />

        <activity
            android:name="com.facebook.LoginActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.example.speechhelper.facebook.FacebookActivity"
            android:label="@string/title_activity_facebook" >
        </activity>
        <activity
            android:name="com.example.speechhelper.facebook.PickerActivity"
            android:label="@string/app_name" />
        <activity
            android:name="com.example.speechhelper.speech.DisplayNote"
            android:label="@string/title_activity_display_note" >
        </activity>
        <activity
            android:name="com.example.speechhelper.speech.RecordVideo"
            android:label="@string/title_activity_record_video" >
        </activity>
    </application>

</manifest>